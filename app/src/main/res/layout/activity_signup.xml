<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".authentication.Signup">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppFontBold"
            android:id="@+id/kanbanText"
            android:text="Kanban."
            android:layout_margin="10dp"
            android:textColor="@color/textBlack"
            android:textSize="64sp" />

        <androidx.cardview.widget.CardView
            android:layout_below="@+id/kanbanText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:padding="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_below="@+id/kanbanText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/AppFontBold"
                    android:text="create new account"
                    android:layout_margin="10dp"
                    android:textColor="@color/textBlack"
                    android:textSize="32sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_margin="10dp"
                    android:id="@+id/nameSignupInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter name"
                    android:layout_marginHorizontal="10dp"
                    app:startIconDrawable="@drawable/account"
                    app:endIconMode="clear_text"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/AppFont"
                        android:textSize="16sp"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_margin="10dp"
                    android:id="@+id/usernameSignupInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter username"
                    app:startIconDrawable="@drawable/at"
                    app:endIconMode="clear_text"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/AppFont"
                        android:textSize="16sp"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_margin="10dp"
                    android:id="@+id/paswordSignupInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter password"
                    app:startIconDrawable="@drawable/password"
                    app:endIconMode="password_toggle"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        style="@style/AppFont"
                        android:textSize="16sp"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/signupBtn"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_height="wrap_content"
                    android:text="Sign up"
                    android:textSize="16sp"
                    android:paddingVertical="10dp"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:textAppearance="@style/AppFontBold"
                    android:textColor="@color/white"
                    />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/sign_up_screen_image"
            android:layout_centerHorizontal="true"
            />


    </RelativeLayout>
</layout>